{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "declarationDir": "./dist/types",
    "declaration": true,
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types.d.ts"
  ],
  "exclude": ["node_modules"]
}
